<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Analytics | getSShort</title>
  <%- include("partials/head.ejs") %>
  <style>
    body {
      font-family: 'Inter', 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
    }
  </style>
</head>

<body class="bg-gray-700 dark:bg-gray-950 min-h-screen transition-colors">
  <!-- Navigation -->
    <!-- Navbar -->
  <nav class="w-full bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
    <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">

      <a href="/" class="text-xl font-bold text-blue-600 dark:text-blue-400">
        getSShort
      </a>
-
      <div class="flex items-center gap-6 text-sm">
        <% if (user) { %>
          <!-- Show logout if logged in -->
          <a href="/user/logout"
             class="text-gray-600 dark:text-gray-300 hover:text-blue-600">
            Logout
          </a>
        <% } else { %>
          <!-- Show login/signup if not logged in -->
          <a href="/login" class="text-gray-900 font-bold dark:text-gray-400 hover:text-blue-600">
            Login
          </a>
          <a href="/signup" class="text-gray-600 dark:text-gray-300 hover:text-blue-600">
            Sign Up
          </a>
        <% } %>

        <!-- Theme Toggle -->
        <button
          id="theme-toggle"
          class="p-2 rounded-lg border border-gray-300 dark:border-gray-600
                 text-gray-700 dark:text-gray-200
                 hover:bg-gray-100 dark:hover:bg-gray-700 transition"
          aria-label="Toggle theme"
        >
          <span id="theme-icon"></span>
        </button>
      </div>
    </div>  
  </nav>  

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto p-6 ">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-10 gap-4">
      <div  class="bg-white dark:bg-gray-900 rounded-2xl shadow-md dark:shadow-gray-900/50 p-8 lg:col-span-2 border border-gray-200 dark:border-gray-800 transition-all hover:shadow-lg">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">
          URL Analytics
        </h2>
        <p class="text-gray-600 dark:text-gray-400 text-lg">
          Track performance of your short URL
        </p>
      </div>

      <a href="/"
            class="inline-block px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-md transition">
         Back to Home
      </a>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-10">

      <!-- Short URL -->
      <div class="bg-white dark:bg-gray-900 rounded-2xl shadow-md dark:shadow-gray-900/50 p-8 border border-gray-200 dark:border-gray-800 transition-all hover:shadow-lg">
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-3 font-semibold uppercase tracking-wide">Short URL</p>
        <p class="text-xl font-bold text-green-600 dark:text-green-400 break-all">
          <%= url.shortId %>
        </p>
      </div>

      <!-- Original URL -->
      <div  class="bg-white dark:bg-gray-900 rounded-2xl shadow-md dark:shadow-gray-900/50 p-8 lg:col-span-2 border border-gray-200 dark:border-gray-800 transition-all hover:shadow-lg">
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-3 font-semibold uppercase opacity-80 tracking-wide">Original URL</p>
        <a href="<%= url.redirectURL %>" target="_blank"
           class="text-green-600 dark:text-green-400 hover:text-green-700 dark:hover:text-green-300 hover:underline break-all text-lg font-medium transition-colors">
          <%= url.redirectURL %>
        </a>
      </div>

      <!-- Total Clicks -->
       <div  class="bg-white dark:bg-gray-900 rounded-2xl shadow-md dark:shadow-gray-900/50 p-8 lg:col-span-2 border border-gray-200 dark:border-gray-800 transition-all hover:shadow-lg">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">
          <p class="text-sm opacity-90 font-semibold uppercase tracking-wide mb-2">Total Clicks</p>
          <p class="text-5xl font-extrabold">
            <%= url.visitHistory.length %>
          </p>
        </h2>
      </div>

    </div>

    <!-- Click History -->
    <div  class="bg-white dark:bg-gray-900 rounded-2xl shadow-md dark:shadow-gray-900/50 p-8 lg:col-span-2 border border-gray-200 dark:border-gray-800 transition-all hover:shadow-lg">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">
        Click History
      </h2>

      <% if (url.visitHistory.length === 0) { %>
        <div class="text-center py-16">
          <svg class="w-16 h-16 mx-auto mb-4 text-gray-400 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <p class="text-gray-900">
            No clicks recorded yet
          </p>
          <p class="text-gray-900 dark:text-gray-500 text-sm mt-2">
            Share your short link to start tracking clicks
          </p>
        </div>
      <% } else { %>

        <div class="max-h-96 overflow-y-auto divide-y divide-gray-200 dark:divide-gray-800">

          <% url.visitHistory
              .slice()
              .reverse()
              .forEach(v => { %>

            <div class="py-5 flex items-center justify-between hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors px-4 -mx-4 rounded-lg">
              <span class="text-gray-700 dark:text-gray-300 text-base font-medium">
                <%= new Date(v.timestamp).toLocaleString() %>
              </span>

              <span class="text-sm px-4 py-2 rounded-full
                           bg-green-100 dark:bg-green-900/40
                           text-green-700 dark:text-green-300 font-semibold
                           border border-green-200 dark:border-green-800">
                Click
              </span>
            </div>

          <% }) %>

        </div>

      <% } %>

    </div>

  </main>

  <%- include("partials/script.ejs") %>

</body>
</html>